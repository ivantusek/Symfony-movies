{% extends 'MoviesBundle::layout.html.twig' %}

{% block body %}
<h1 class="page-header" style="margin: 80px 0 20px;" align="center">Edit Person</h1>
<form method="post">
		<h1></h1>

	<table width="60%" height="200">

			<tr>
				<td>{{ form_label(form.name) }}</td>
				<td>
					{{ form_widget(form.name) }}
					{{ form_errors(form.name) }}
				</td>
			</tr>
			<tr>
				<td>{{ form_label(form.surname) }}</td>
				<td>
					{{ form_widget(form.surname) }}
					{{ form_errors(form.surname) }}
				</td>
			</tr>
			<tr>
				<td>{{ form_label(form.dateBirth) }}</td>
				<td>
					{{ form_widget(form.dateBirth) }}
					{{ form_errors(form.dateBirth) }}
				</td>
			</tr>
			<tr>
				<td>{{ form_label(form.roles) }}</td>
				<td>
					{{ form_widget(form.roles) }}
					{{ form_errors(form.roles) }}
				</td>
			</tr>
			<tr>
				<td colspan="2"><input type="submit" class="btn btn-success" value="Edit"></td>
			</tr>
	</table>
	{{ form_rest(form) }}
</form>
<a href="{{ path('persons') }}" class ="btn btn-primary">List of Persons</a>
{% endblock %}
