{% extends 'MoviesBundle::layout.html.twig' %}

{% block body %}
<h1 class="page-header" align="center" style="margin: 80px 0 20px;">List of roles</h1>

<table class="table table-striped" width="40%">
<tr">
	<th>Id</th>
	<th style="text-align:center;">Name</th>

</tr>
{% for role in roles %}
	<tr>
		<td scope="row">{{ role.id }}</td>
		<td align="center">{{ role.name }}</td>
	</tr>
{% endfor %}

</table>

{% endblock %}
